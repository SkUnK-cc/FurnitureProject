<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:id="@+id/item_bill">

    <ImageView
        android:id="@+id/iv_classify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_classify_pet"/>


    <TextView
        android:id="@+id/tv_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/list_title"
        android:text="宠物"
        android:layout_toRightOf="@id/iv_classify"
        android:layout_alignTop="@id/iv_classify"/>

    <TextView
        android:id="@+id/tv_classify_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTextBlackLight"
        android:textSize="@dimen/list_sub_title"
        android:text="逗猫棒"
        android:layout_toRightOf="@id/iv_classify"
        android:layout_below="@id/tv_classify"/>

    <TextView
        android:id="@+id/tv_bill_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlackLight"
        android:layout_alignBottom="@id/tv_classify"
        android:layout_toRightOf="@id/tv_classify"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/list_sub_title"/>

    <TextView
        android:id="@+id/tv_classify_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/list_price"
        android:text="29.00"/>

</RelativeLayout>
